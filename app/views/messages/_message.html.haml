.main-chat__message{data: {message: {id: message.id}}}
  .main-chat__message--contents
    .main-chat__message--contents-name
      = message.user.name
    .main-chat__message--contents-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")

  .main-chat__message--tweet
    - if message.content.present? || message.image.present? 
      %p.lower-message__content
        = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
